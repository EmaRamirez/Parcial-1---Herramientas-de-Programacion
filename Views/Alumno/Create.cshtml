@model Alumno
@{

}

<div>
    <form method="post" asp-action="Create">

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" asp-for="Name" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Surname" class="form-label"></label>
            <input type="text" asp-for="Surname" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Dni" class="form-label"></label>
            <input type="text" asp-for="Dni" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Nationality" class="form-label"></label>
            <select asp-for="Nationality">
                <option value="0">Argentina</option>
                <option value="1">Paraguay</option>
                <option value="2">Chile</option>
                <option value="3">Brasil</option>
                <option value="4">Bolivia</option>
                <option value="5">Uruguay</option>
            </select>
        </div>
        <div>
            <label asp-for="CarreraId"></label>
            <select asp-for="CarreraId" asp-items="ViewBag.CarreraId"></select>
        </div>
        <button type="submit" class="btn btn-info">Guardar</button>
    </form>
</div>