@using Parcial1.ViewModels;
@model IndexViewModel
@{

}


<div>
    <div>
        <h2 style="text-align: center;">Listado de Alumnos</h2>
    </div>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Agregar Alumno</a>
    </div>
    <div>
        <div class="mb-3">
            <form method="get" asp-action="Index">
                <input type="text" asp-for="FilterName" class="form-control" placeholder="Filtrar por nombre">
            </form>
        </div>
        <table class="table table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x => x.ListAlumn.First().Name)</th>
                    <th>@Html.DisplayNameFor(x => x.ListAlumn.First().Surname)</th>
                    <th>@Html.DisplayNameFor(x => x.ListAlumn.First().Dni)</th>
                    <th>@Html.DisplayNameFor(x => x.ListAlumn.First().Nationality)</th>
                    <th>@Html.DisplayNameFor(x => x.ListAlumn.First().carrera.Name)</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListAlumn)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Dni</td>
                        <td>@item.Nationality</td>
                        <td>@item.carrera.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalle</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Modificar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>